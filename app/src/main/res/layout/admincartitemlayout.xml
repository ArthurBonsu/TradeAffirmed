<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/colorPrimaryDark">



        <ImageView
            android:id="@+id/admincartimageofprouct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#2d2d2d"
            android:layout_below="@+id/cart_product_quantity"
            android:contentDescription="@string/tradersimageonscreen"
            android:scaleType="centerCrop" />




        <TextView
            android:id="@+id/admincarttitlehere"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Product Name Here"
            android:layout_below="@+id/admincartimageofprouct"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/admincartquantity"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Number of products in cart"
            android:textAlignment="viewEnd"
            android:layout_below="@+id/admincarttitlehere"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:layout_marginRight="2dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:gravity="end" />

        <TextView
            android:id="@+id/admincart_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:layout_below="@+id/admincartquantity"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"

            android:gravity="center"
            android:layout_marginTop="15dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>